DEF GAME_SELECT_BGP EQU %11_10_01_00

; Number of frames per tick in the theme
DEF MUSIC_GAME_SELECT_SPEED EQU 10

; Game descriptions

; Where to draw the descriptions
DEF vDescText EQU _SCRN0

DEF DESC_TEXT_LINE_LENGTH EQU 8
DEF DESC_TEXT_LINE_COUNT EQU 10

DEF vDescTextTiles EQU $8A00
DEF DESC_TEXT_TILES_START EQU LOW(vDescTextTiles / 16)
DEF DESC_TEXT_LAST_TILE EQU DESC_TEXT_TILES_START + DESC_TEXT_LINE_LENGTH * DESC_TEXT_LINE_COUNT - 1

DEF DESC_TEXT_BLANK_TILE EQU 0

DEF DESC_TEXT_SPEED EQU 1
