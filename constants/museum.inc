; Jukebox display configuration
DEF JUKEBOX_Y_PADDING EQU 2
DEF JUKEBOX_X_PADDING EQU 4
DEF JUKEBOX_LINE_COUNT EQU SCRN_Y_B - (JUKEBOX_Y_PADDING * 2)
DEF JUKEBOX_LINE_LENGTH EQU SCRN_X_B - (JUKEBOX_X_PADDING * 2)
DEF vJukeboxText EQU _SCRN0 + (JUKEBOX_Y_PADDING * SCRN_VX_B) + JUKEBOX_X_PADDING
; Number of bytes between the start of each music name
DEF JUKEBOX_LINE_GAP EQU SCRN_VX_B * 2
